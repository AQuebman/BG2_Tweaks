IF
	InParty(Myself)
	GlobalLT("LoveTalk","LOCALS",36)
	!Global("AerieRomanceActive","GLOBAL",1)
THEN
	RESPONSE #100
		SetGlobal("AerieRomanceActive","GLOBAL",1)
		Continue()
END

